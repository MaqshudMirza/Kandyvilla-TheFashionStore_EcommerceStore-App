<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:outlineAmbientShadowColor="@color/heavypink"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/homecategoryimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/western_dress"
            >

        </ImageView>

        <TextView
            android:id="@+id/homecategoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category name"
            android:textColor="@color/indianred"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bellezaregular">
        </TextView>


    </LinearLayout>

</androidx.cardview.widget.CardView>