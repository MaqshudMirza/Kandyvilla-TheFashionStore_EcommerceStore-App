<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlacedOrderActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/orderplaced" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bellezaregular"
        android:text="Your Order Is Placed"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:textColor="@color/indianred"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bellezaregular"
        android:text="Thanks For Shopping !"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="520dp"
        android:textColor="@color/heavypink"
        />

</RelativeLayout>